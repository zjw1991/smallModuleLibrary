/* pages/scrollMenu/scrollMenu.wxss */
page{
  background-color: #f4f4f4;
  margin-bottom: 50rpx;
  height: 100%;
  width:100%;
  overflow-x: hidden;
}
.font_28{
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.font_22{
  font-size: 22rpx;
  color: #858585;
}
.mt_20{
  margin-top: 25rpx;
  margin-bottom: 7rpx;
}
.mt_5{
  position: relative;
  top: -5rpx;
}
.swiper{
  background-color: white;
}
.fl_right{
  float: left;
  width: 25%;
  margin-top: 10rpx;
}
.swiper{
  width: 100%;
  height: 400rpx;
  margin: 0 auto;
  margin-top: 15rpx;
}
.swiper .swiper-box{
  height: 150rpx;
  border-bottom: 1px solid #f4f4f4;
}
.swiper .navimg{
  width: 80rpx;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-top: 15rpx;
}
.swiper .navtext{
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-top: 15rpx;
}
.navimg{
  width: 42rpx;
  height: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}
.second-boxs .navtext{
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-top: 15rpx;
}

/* 修改指示点 */
/* 默认指示点的样式 */
.swiper .wx-swiper-dot {
  width: 15rpx;
  height: 15rpx;
  background: white;
  border-radius: 15rpx;
}
 
/* 选中指示点的样式 */
.swiper .wx-swiper-dot.wx-swiper-dot-active {
    width: 30rpx;
    height: 15rpx;
    background: white;
    border-radius: 15rpx;
}