
      <!-- 轮播图 -->
      <swiper
        class="swiper"
        style=""
        indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}"
        interval="{{interval}}"
        duration="{{duration}}"
        circular="{{circular}}"
        previous-margin="20rpx"
        next-margin="20rpx">
        
        <block wx:for="{{imgUrls}}" wx:key="">
          <swiper-item>
            <image src="{{item}}" class="slide-image" mode="widthFix" />
          </swiper-item>
        </block>
      </swiper>