.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: 100% 100%;
  background: rgba(0,0,0,.6);
  opacity: 1;
  z-index:1;
}
.poster_wrap{
  position: fixed;
  left:50%;
  transform: translateX(-50%);
  top: 14%;
  border-radius: 12rpx;
  z-index: 2;
}
.poster_wrap .scroll_box .cavans_image{
  border-radius: 12rpx;
  z-index:2;
}
.poster_info_btn{
  width:45rpx;
  height:45rpx;
}
.poster_info{
  position:relative;
  text-align: center;
  top:20rpx;
  left:50%;
  transform: translateX(-50%);
  color: #fff;
}
.scroll_box{
  width: 700rpx;
  white-space: nowrap;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
}
.scroll_box scroll-view{
  height: 100%;
  width: auto;
}
.scroll_box .item_list{
  height: 100%;
  margin-right: 23rpx;
  display: inline-block;
}