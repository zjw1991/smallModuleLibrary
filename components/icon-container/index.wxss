.movable-area {
  pointer-events: none;
  position: fixed;
  right: 0;
  z-index: 1000;
  width: 130rpx;
  overflow: hidden
}
.movable-view {
  position: relative;
  pointer-events: auto;
  width: 90rpx;
  padding: 20rpx;
  box-sizing: content-box;
  text-align: center
}
.btns-bg {
  position: absolute;
  bottom: 0;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-pack: end;
  justify-content: flex-end;
  -ms-flex-direction: column;
  flex-direction: column;
  -ms-flex-align: center;
  align-items: center;
  border-radius: 44rpx;
  background: rgba(255,255,255,.9);
  box-shadow: 0rpx 0rpx 20rpx rgba(0,0,0,.07)
}